<% include ../partials/header %>




<div class="container">
    <header class="jumbotron">
            <div class="container">
                <h1>Welcome To Memory Wall</h1> 
                <p>View the photos</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/photos/new"> Add new photo </a>
                </p>
            </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% photos.forEach(function(photo) { %>
            <div class="col-md-4 col-sm-6">
                <div class="thumbnail">
                    <img class="gallery" src="<%= photo.image %>">
                    <div class="caption">
                        <h4><%= photo.name %></h4>
                    </div>
                    <p>
                        <a  href="/photos/<%= photo._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>


</div>
<% include ../partials/footer %>